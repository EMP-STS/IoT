                    </StackPanel>
                </StackPanel>
            </ListViewItem>
        </ListView>
        <StackPanel Opacity="100" Orientation="Vertical" VerticalAlignment="Bottom" Margin="0,0,0,50" Width="500" Height="100" HorizontalAlignment="Center">
            <TextBlock Margin="20,0,0,0" Text="What time is it now?" Foreground="White" FontSize="36" VerticalAlignment="Center" HorizontalAlignment="Center" />
            <TextBlock Margin="20,0,0,0" Text="it's High noon" Foreground="White" FontSize="36" VerticalAlignment="Center" HorizontalAlignment="Center" />
        </StackPanel>
    </Grid>
</Page>
